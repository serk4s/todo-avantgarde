{
  "name": "todo-avantgarde",
  "version": "1.0.0",
  "description": "To-Do List with Sass and Tailwind CSS",
  "scripts": {
    "sass": "sass src/scss/main.scss dist/css/temp.css",
    "tailwind": "tailwindcss -i dist/css/temp.css -o dist/css/main.css --config tailwind.config.js",
    "build:css": "npm run sass && npm run tailwind",
    "watch:css": "npm run build:css -- --watch",
    "watch:sass": "sass src/scss/main.scss dist/css/temp.css --watch",
    "watch:tailwind": "tailwindcss -i dist/css/temp.css -o dist/css/main.css --config tailwind.config.js --watch"
  },
  "keywords": [
    "sass",
    "tailwind",
    "todo"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "sass": "^1.77.4",
    "tailwindcss": "^3.4.4"
  }
}